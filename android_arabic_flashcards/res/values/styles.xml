<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Custom" parent="@android:style/Theme.NoTitleBar">
        <!-- disable the shadow that covers the top of the activity -->
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="CustomHeader" parent="@android:style/Widget.TextView.ListSeparator">
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/custom_blue</item>
    </style>
</resources>
